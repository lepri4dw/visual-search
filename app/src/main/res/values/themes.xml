<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.VisualSearch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/text_on_accent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Custom attributes -->
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>

        <!-- Transitions and animations -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
    </style>

    <!-- Card style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="rippleColor">@color/ripple</item>
    </style>

    <!-- Chip style - исправлены значения -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/divider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconTint">@color/primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:checkable">true</item>
        <item name="ensureMinTouchTargetSize">true</item>
    </style>

    <!-- Button style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Добавляем стиль для кнопки галереи -->
    <style name="Widget.App.GalleryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/gallery_button_text</item>
        <item name="iconTint">@color/primary</item>
        <item name="strokeColor">@color/divider</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>