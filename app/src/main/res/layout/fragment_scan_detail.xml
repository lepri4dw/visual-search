<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.history.ScanDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="@android:color/transparent"
            app:contentScrim="@android:color/transparent"
            app:titleEnabled="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/bottom_rounded_shape"
                android:clipToOutline="true"
                app:layout_collapseMode="parallax">

                <!-- Изображение с закругленными углами снизу -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/imageCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imageViewDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <!-- Градиентное затемнение для лучшей читаемости текста -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/image_gradient_scrim" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Плавающая карточка информации о времени сканирования -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dateCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textViewDetailDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textColor="@color/text_on_primary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        tools:text="25 мар 2023, 15:30" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Тип продукта как заголовок на изображении -->
                <TextView
                    android:id="@+id/textViewDetailProductType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:shadowColor="#66000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Смартфон" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Карточка с детальной информацией -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Информация о товаре"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Разделительная линия -->
                    <View
                        android:layout_width="40dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/primary" />

                    <!-- Запрос -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Запрос:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textViewDetailQuery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            tools:text="iPhone 13 Pro Max Silver" />
                    </LinearLayout>

                    <!-- Бренд -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Бренд:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textViewDetailBrand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            tools:text="Apple" />
                    </LinearLayout>

                    <!-- Модель -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Модель:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textViewDetailModel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            tools:text="iPhone 13 Pro Max" />
                    </LinearLayout>

                    <!-- Цвет -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Цвет:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textViewDetailColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            tools:text="Silver" />
                    </LinearLayout>

                    <!-- Индикатор сохранения -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/primary_light">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Данные об этом товаре сохранены в истории поиска"
                            android:textColor="@color/primary_dark"
                            android:textSize="14sp"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@android:drawable/ic_menu_save" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Карточка действий -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/actionsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardViewDetails">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Действия"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Разделительная линия -->
                    <View
                        android:layout_width="40dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/primary" />

                    <!-- Кнопки действий -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonRescan"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Просмотреть в маркетплейсах"
                        android:textColor="@color/text_on_primary"
                        android:backgroundTint="@color/primary"
                        android:textAllCaps="false"
                        app:cornerRadius="16dp"
                        app:elevation="4dp"
                        app:icon="@android:drawable/ic_menu_search"
                        app:iconGravity="textStart"
                        app:iconTint="@color/text_on_primary"
                        android:fontFamily="sans-serif-medium" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonShare"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="Поделиться"
                        android:textColor="@color/text_on_primary"
                        android:backgroundTint="@color/accent"
                        android:textAllCaps="false"
                        app:cornerRadius="16dp"
                        app:elevation="4dp"
                        app:icon="@android:drawable/ic_menu_share"
                        app:iconGravity="textStart"
                        app:iconTint="@color/text_on_primary"
                        android:fontFamily="sans-serif-medium" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonDeleteScan"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="Удалить из истории"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#F44336"
                        android:textAllCaps="false"
                        app:cornerRadius="16dp"
                        app:elevation="4dp"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Кнопка "назад" -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@android:color/white"
        app:backgroundTint="#80000000"
        app:borderWidth="0dp"
        app:elevation="4dp"
        app:fabSize="mini"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="start|top" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>