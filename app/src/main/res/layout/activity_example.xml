<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".remote.gemini.ExampleActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Примеры использования Gemini API"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/gucciBagButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пример с сумкой"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/rubiksCubeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пример с кубиком Рубика"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/gucciBagButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/customSearchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пользовательский пример"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/rubiksCubeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/customSearchButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Здесь будут отображаться результаты запросов"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:textColor="@color/black"/>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>