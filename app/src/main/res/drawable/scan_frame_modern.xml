<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Полупрозрачный фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Внутренняя рамка с градиентом -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/primary" />
            <corners android:radius="22dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
    <!-- Угловые маркеры - верхний левый -->
    <item
        android:width="30dp"
        android:height="30dp"
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="@color/primary" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
    <!-- Угловые маркеры - верхний правый -->
    <item
        android:width="30dp"
        android:height="30dp"
        android:right="2dp"
        android:top="2dp"
        android:gravity="right">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="@color/primary" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
    <!-- Угловые маркеры - нижний левый -->
    <item
        android:width="30dp"
        android:height="30dp"
        android:left="2dp"
        android:bottom="2dp"
        android:gravity="bottom|left">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="@color/primary" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="0dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
    <!-- Угловые маркеры - нижний правый -->
    <item
        android:width="30dp"
        android:height="30dp"
        android:right="2dp"
        android:bottom="2dp"
        android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="@color/primary" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="20dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list>