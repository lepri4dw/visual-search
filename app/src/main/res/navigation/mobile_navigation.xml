<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- Фрагменты для BottomNavigation и основные экраны -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.visualsearch.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <!-- Аргументы остаются как есть -->
        <argument android:name="query" app:argType="string" app:nullable="true" android:defaultValue="@null" />
        <argument android:name="productType" app:argType="string" app:nullable="true" android:defaultValue="@null" />
        <argument android:name="brand" app:argType="string" app:nullable="true" android:defaultValue="@null" />
        <argument android:name="model" app:argType="string" app:nullable="true" android:defaultValue="@null" />
        <argument android:name="color" app:argType="string" app:nullable="true" android:defaultValue="@null" />
        <argument android:name="imagePath" app:argType="string" app:nullable="true" android:defaultValue="@null" />
        <action
            android:id="@+id/action_navigation_home_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />
        <!-- Если нужен переход на профиль с главного экрана -->
        <action
            android:id="@+id/action_navigation_home_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.visualsearch.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.visualsearch.ui.history.ScanHistoryFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_scan_history">
        <action
            android:id="@+id/action_navigation_history_to_scan_detail"
            app:destination="@id/navigation_scan_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_scan_detail"
        android:name="com.example.visualsearch.ui.history.ScanDetailFragment"
        android:label="Scan Detail"
        tools:layout="@layout/fragment_scan_detail">
        <argument
            android:name="scanId"
            app:argType="long" />
        <action
            android:id="@+id/action_scan_detail_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.visualsearch.ui.profile.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile">

        <!-- Действие для ЯВНОГО ВЫХОДА ПО КНОПКЕ (очищает всё) -->
        <action
            android:id="@+id/action_navigation_profile_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />

        <!-- НОВОЕ ДЕЙСТВИЕ для АВТО-РЕДИРЕКТА (заменяет Profile на Login) -->
        <action
            android:id="@+id/action_profile_redirect_unauthenticated_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />

    </fragment>

    <!-- Фрагменты аутентификации и сплэш -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.visualsearch.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.visualsearch.ui.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.visualsearch.ui.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>